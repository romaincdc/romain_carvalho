<div id="<%= dom_id cocktail %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= cocktail.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= cocktail.description %>
  </p>
    <p class="my-5">
    <strong class="block font-medium mb-1">Price :</strong>
    <%= cocktail.prices.pluck(:value).sum %> €
  </p>
  
  <% if action_name != "show" %>
    <%= link_to "Show this cocktail", cocktail, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this cocktail", edit_cocktail_path(cocktail), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
